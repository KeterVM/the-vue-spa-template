{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./types/**/*",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": [
      "vite-plugin-layouts/client",
      "unplugin-vue-router",
      "@intlify/unplugin-vue-i18n/messages",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}